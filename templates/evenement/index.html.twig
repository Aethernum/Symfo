{% extends 'base.html.twig' %}

{% block title %}{{ name }}{% endblock %}

{% block stylesheets %}
        <link href="{{ asset('css/evenement_css.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <h1>Les Ã©venements</h1>
    <div class="evenements">
        {% for evenement in evenements %}
            {% if loop.index0 % 3 == 0  and loop.first %}
                <div class="row row-event">
            {% elseif loop.index0 % 3 == 0 %}
                </div>
                <div class="row row-event">
            {% endif %}
                <div class="col-4">
                    <a href="{{ path('evenement_show', { id: evenement.id }) }}">
                        <div class="evenement">
                            <img src="https://padelmagazine.fr/wp-content/uploads/2018/09/photo-1456983933114-c22026990f4b-3.jpeg" alt="sample41"/>
                            <figcaption>
                                <div class="titre-event">{{ evenement.NomEvenement }}</div>
                            </figcaption>			
                        </div>
                    </a>
                </div>
            {% if loop.index0 % 3 == 1 or loop.last %}
            {% endif %}   
        {% endfor %}
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('evenement_new') }}">Create new</a>                                
    {% endif %}
    
{% endblock %}
