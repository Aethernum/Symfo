{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEvenement</th>
                <th>Date</th>
                <th>HeureDebut</th>
                <th>HeureFin</th>
                <th>NombrePlace</th>
                <th>CategoriePlace</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.NomEvenement }}</td>
                <td>{{ evenement.Date ? evenement.Date|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.HeureDebut ? evenement.HeureDebut|date('H:i:s') : '' }}</td>
                <td>{{ evenement.HeureFin ? evenement.HeureFin|date('H:i:s') : '' }}</td>
                <td>{{ evenement.NombrePlace }}</td>
                <td>{{ evenement.CategoriePlace }}</td>
                <td>
                    <a href="{{ path('evenement_show', {'id': evenement.id}) }}">show</a>
                    <a href="{{ path('evenement_edit', {'id': evenement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('evenement_new') }}">Create new</a>
{% endblock %}
