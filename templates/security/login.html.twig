{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block stylesheets %}
        <link href="{{ asset('css/login_css.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
<form action="{{ path('connexion') }}" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal cnct-title">Connexion</h1>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control cnct-form" placeholder="Nom d'utilisateur" required autofocus>
    <input type="password" name="password" id="inputPassword" class="form-control cnct-form" placeholder="Mot de passe" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="div-cnct-button">
        <button class="btn btn-lg btn-block cnct-button" type="submit">
            Se connecter
        </button>
    </div>
</form>
{% endblock %}
