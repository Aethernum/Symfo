{{ form_start(form) }}
    <div class="form">
        <div class="form-group">
            {{ form_label(form.username, 'Nom d\'utilisateur' )}}
            {{ form_widget(form.username, {'attr': {'class': 'form-control','type':'text','placeholder':'Nom d\'utilisateur'}}) }}
        </div>        
        <div class="form-group">
            {{ form_label(form.password.first, 'Mot de passe' )}}
            {{ form_widget(form.password.first, {'attr': {'class': 'form-control','type':'text','placeholder':'Mot de passe'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.password.second, 'Confirmation du mot de passe' )}}
            {{ form_widget(form.password.second, {'attr': {'class': 'form-control','type':'text','placeholder':'Mot de passe'}}) }}
        </div>
    </div>
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
